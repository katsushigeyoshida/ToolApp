<Window x:Class="ToolApp.DiffFolder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToolApp"
        mc:Ignorable="d"
        Title="DiffFolder" Height="450" Width="600" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Label Content="タイトル" Margin="10,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <ComboBox Name="cbFolderTitle" Margin="70,5,40,0" IsEditable="True" VerticalAlignment="Top" SelectionChanged="cbFolderTitle_SelectionChanged"/>
        <Label Content="比較元" Margin="10,30,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Name="tbSrcFolder" Margin="70,30,40,0" VerticalAlignment="Top" MouseDoubleClick="tbSrcFolder_MouseDoubleClick"/>
        <Label Content="比較先" Margin="10,55,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Name="tbDstFolder" Margin="70,55,40,0" VerticalAlignment="Top" MouseDoubleClick="tbDstFolder_MouseDoubleClick"/>
        <Label Content="対象ファイル" Margin="5,80,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="tbTargetFile" Margin="70,85,0,0" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label Content="除外ファイル" Margin="200,80,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="tbExceptFile" Margin="270,85,0,0" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label Content="除外フォルダ" Margin="400,80,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="tbExceptFolder" Margin="470,85,0,0" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <DataGrid x:Name="dgDiffFolder" Margin="0,110,0,30" IsReadOnly="False" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ファイル名" Binding="{Binding mFileName}" IsReadOnly="True" />
                <DataGridTextColumn Header="相対パス" Binding="{Binding mRelPath}" IsReadOnly="True" />
                <DataGridTextColumn Header="比較元日付" Binding="{Binding mSrcLastDate, StringFormat=yyyy/MM/dd HH:mm:ss}" IsReadOnly="True" />
                <DataGridTextColumn Header="比較元サイズ" Binding="{Binding mSrcSize, StringFormat=N0}" IsReadOnly="True" >
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="比較先日付" Binding="{Binding mDstLastDate, StringFormat=yyyy/MM/dd HH:mm:ss}" IsReadOnly="True" />
                <DataGridTextColumn Header="比較先サイズ" Binding="{Binding mDstSize, StringFormat=N0}" IsReadOnly="True" >
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btComper" Content="比較"  Width="50" Margin="10,0,0,5" Height="20" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="Button_Click"/>
        <Button x:Name="btRightUpdate" Content="右へ更新" Width="50" Margin="70,0,0,5" Height="20" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="Button_Click"/>
        <Button x:Name="btLeftUpdate" Content="左へ更新" Width="50" Margin="130,0,0,5" Height="20" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="Button_Click"/>
    </Grid>
</Window>
